prototype(Sitegeist.ChitChat:P) < prototype(Neos.Fusion:Component) {
  minLength = 100
  maxLength = 500

  links = true
  strong = true
  italic = true

  renderer = afx`
    <p><Sitegeist.ChitChat:Text {...props} /></p>
  `
}

prototype(Sitegeist.ChitChat:UL) < prototype(Neos.Fusion:Component) {

  length = 5
  minLength = 50
  maxLength = 120

  links = true
  strong = true
  italic = true

  renderer = afx`
    <ul>
      <Neos.Fusion:Loop items={Array.range(1, props.length)} itemName="index">
        <li><Sitegeist.ChitChat:Line seed={index} {...props} /></li>
      </Neos.Fusion:Loop>
    </ul>
  `
}

prototype(Sitegeist.ChitChat:OL) < prototype(Neos.Fusion:Component) {

  length = 5
  minLength = 50
  maxLength = 120

  links = true
  strong = true
  italic = true

  renderer = afx`
    <ol>
      <Neos.Fusion:Loop items={Array.range(1, props.length)} itemName="index">
        <li><Sitegeist.ChitChat:Line seed={index} {...props}  /></li>
      </Neos.Fusion:Loop>
    </ol>
  `
}



